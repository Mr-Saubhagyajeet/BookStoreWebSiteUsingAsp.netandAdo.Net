@{
    ViewData["Title"] = "All Books";
}
<div class="container">
    <h1 class=" container-fluid">All Books</h1>
    <hr style="border:none; border-top:0.3rem solid black" />
    <div class="py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm ">
                        <img class="card-img-top" src="" alt="Thumbnail [100%x225]" style="height:275px; width: 100%; display: block;" asp-append-version="true">
                        <div class="card-body">
                            <p class="h4 fw-bold text-primary text-truncate ">Title</p>
                            <p class="small text-secondary fw-bold text-truncate">Author</p>
                            <p class="card-text text-truncate ">Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="" asp-action="" asp-route-id="">
                                        View
                                    </a>
                                    <a class="btn btn-sm btn-secondary" asp-controller="" asp-action="" asp-route-id="">
                                        Edit
                                    </a>
                                </div>
                                <small class="text-black fw-bold">Rs Amount</small>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
